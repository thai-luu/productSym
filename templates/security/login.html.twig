{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form action="/login/check" method="post">
    {# {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %} #}
    
    {% if app.session.get('email') %}
        <div class="mb-3">
            You are logged in as {{ app.session.get('email') }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    {% if alert is defined %}
        <div class="alert alert-danger" role="alert">
            Password or email invalid
        </div>
    {% endif %}
    {% if blert is defined %}
        <div class="alert alert-danger" role="alert">
            Please Login
        </div>
    {% endif %}
   {{ app.session.get('email') }}
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
